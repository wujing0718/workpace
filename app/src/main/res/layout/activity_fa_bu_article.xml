<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.FaBuArticleActivity">

    <RelativeLayout
        android:id="@+id/view_fabu_tab"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <TextView
                android:text="取消"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="文章"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/bt_fabu"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <TextView
                android:text="发布"
                android:layout_centerInParent="true"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_below="@+id/view_fabu_tab"
        android:layout_above="@+id/view_charu"
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/view_wenzhang"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <EditText
                android:id="@+id/edt_wenzhang_title"
                android:hint="文章标题"
                android:gravity="center"
                android:paddingHorizontal="@dimen/dp_10"
                android:background="@null"
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

    <LinearLayout
        android:id="@+id/view_charu"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bt_add_imageview"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/kaquan_kuang"
                android:paddingHorizontal="@dimen/icon_size_20dp"
                android:paddingVertical="5dp"
                android:text="插入图片"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/bt_add_editview"
                android:layout_marginVertical="10dp"
                android:layout_centerInParent="true"
                android:background="@drawable/kaquan_kuang"
                android:paddingHorizontal="@dimen/icon_size_20dp"
                android:paddingVertical="5dp"
                android:text="插入文本"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>