<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/color_white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.TianXieWuLiuActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />

        </RelativeLayout>

        <TextView
            android:text="物流信息"
            android:layout_centerInParent="true"
            android:textSize="17sp"
            android:textColor="@color/color_white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_50"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="快递单号"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_kuaidi_danhao"
                android:paddingHorizontal="@dimen/dp_10"
                android:background="@drawable/black_kuang"
                android:hint="输入快递单号"
                android:layout_marginLeft="@dimen/dp_22"
                android:layout_gravity="center_vertical"
                android:textSize="@dimen/text_size_12sp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30" />

        </LinearLayout>

        <LinearLayout

            android:layout_marginTop="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="快递单号"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginLeft="@dimen/dp_20"
                android:background="@drawable/black_kuang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_30">

                <EditText
                    android:id="@+id/edt_kuaidi_name"
                    android:hint="顺丰"
                    android:layout_toLeftOf="@+id/bt_xuanze_kuaidi"
                    android:textSize="12sp"
                    android:background="@null"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:id="@+id/bt_xuanze_kuaidi"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="match_parent">

                    <TextView
                        android:text="▼"
                        android:textSize="12sp"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </RelativeLayout>

        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/bt_fahuo"
            android:text="发货"
            android:textColor="@color/color_white"
            android:background="@drawable/black_di"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:layout_marginBottom="@dimen/dp_40"
            android:layout_marginHorizontal="@dimen/dp_40"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_30" />

    </RelativeLayout>

</LinearLayout>