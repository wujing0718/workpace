<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuanZi.Activity.WenZhangDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:src="@mipmap/img_back"
                android:layout_centerInParent="true"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

        <TextView
            android:text="文章详情"
            android:textSize="17sp"
            android:textColor="@color/colorBlack"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/bt_gengduo"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:src="@mipmap/img_gengduo"
                android:layout_centerInParent="true"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginHorizontal="15dp"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_quanzi_touxiang"
                    android:layout_width="@dimen/dp_40"
                    android:layout_height="@dimen/dp_40" />

                <TextView
                    android:text="V"
                    android:gravity="center"
                    android:background="@drawable/wode_dengji"
                    android:layout_gravity="bottom|right"
                    android:textColor="@color/colorRed"
                    android:layout_width="16dp"
                    android:layout_height="16dp" />

            </FrameLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_gravity="center_vertical"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_quanzi_name"
                        android:text=""
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginLeft="6dp"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_vip"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:text=".1"
                        android:textSize="12sp"
                        android:textColor="#F5C211"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


                <TextView

                    android:id="@+id/tv_quanzi_chenghu"
                    android:text=""
                    android:textSize="11sp"
                    android:layout_marginTop="4dp"
                    android:textColor="#818181"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/view_detail_weizhi"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_gravity="center_vertical"
                    android:src="@mipmap/img_dingwei"
                    android:layout_width="12dp"
                    android:layout_height="12dp" />

                <TextView
                    android:id="@+id/tv_quanzi_weizhi"
                    android:text=""
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_marginLeft="@dimen/layout_margin_2dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bt_guanzhu"
                android:layout_marginLeft="@dimen/dp_10"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <TextView
                    android:text="+关注"
                    android:textSize="12sp"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/login_kuang"
                    android:layout_centerInParent="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:id="@+id/view_wenzhang"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>


</LinearLayout>