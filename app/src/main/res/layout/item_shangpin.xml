<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginHorizontal="8dp"
    android:layout_marginBottom="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:scaleType="centerCrop"
                android:id="@+id/img_jingxuan_photo"
                android:layout_width="match_parent"
                android:layout_height="170dp" />

            <com.haozhang.lib.SlantedTextView
                android:id="@+id/slanted"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:gravity="center"
                app:slantedBackgroundColor="@color/white"
                app:slantedLength="40dp"
                app:slantedMode="left"
                app:slantedText="IOS"
                app:slantedTextColor="@color/colorRed"
                app:slantedTextSize="12sp"
                />

            <ImageView
                android:id="@+id/img_guanli"
                android:visibility="gone"
                android:layout_marginTop="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="right"
                android:src="@mipmap/unselect"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </FrameLayout>


    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/tv_jingxuan_title"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_marginHorizontal="8dp"
        android:text=""
        android:maxLines="2"
        android:ellipsize="end"
        android:textSize="12sp"
        android:textColor="@color/colorBlack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="8dp"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:text="¥"
                android:textSize="12sp"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:text="12"
                android:id="@+id/tv_jingxuan_price"
                android:layout_marginLeft="@dimen/dp_4"
                android:textSize="18sp"
                android:textColor="@color/colorRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_yuan_price"
                android:text=""
                android:layout_marginLeft="@dimen/dp_6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <TextView
            android:id="@+id/tv_yinli"
            android:text="赚 ¥8.8"
            android:visibility="gone"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/colorRed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/dp_4"
        android:layout_marginHorizontal="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_jingxuan_name"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/colorHui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_jingxuan_num"
            android:layout_alignParentRight="true"
            android:text=""
            android:textSize="11sp"
            android:textColor="@color/colorHui"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    

</LinearLayout>