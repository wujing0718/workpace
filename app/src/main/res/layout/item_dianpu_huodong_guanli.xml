<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_marginLeft="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_6"
            android:layout_marginRight="@dimen/dp_20"
            android:background="@mipmap/img_duanpu_huodong_guanli"
            android:layout_gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_40"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_shangpin_title"
                    android:textColor="@color/colorBlack"
                    android:textSize="30sp"
                    android:layout_marginRight="@dimen/dp_20"
                    android:text="¥50"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_shangpin_collect_num"
                    android:layout_marginTop="@dimen/dp_4"
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:text="订单金额满500可用"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_shangpin_price"
                    android:layout_marginBottom="10dp"
                    android:layout_marginTop="5dp"
                    android:textColor="#818181"
                    android:textSize="12sp"
                    android:text="有效期2019.02.25-2019.7.31"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/tv_lijilingqu"
        android:layout_marginRight="@dimen/dp_16"
        android:layout_gravity="right|center_vertical"
        android:text="立即领取"
        android:textColor="@color/colorWhite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/iv_select"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_gravity="center_vertical"
            android:background="@mipmap/unselect" />


</FrameLayout>