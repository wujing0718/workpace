<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@mipmap/img_xinrenlibao2"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_350">

    <LinearLayout
        android:layout_marginTop="@dimen/dp_30"
        android:orientation="vertical"
        android:layout_marginHorizontal="@dimen/dp_60"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="您的好友送茶米啦，快点领取吧！"
            android:textColor="#CCBA91"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_20"
            android:layout_gravity="center"
            android:layout_marginHorizontal="@dimen/dp_50"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/tv_conttent_one"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:text="您的好友“爱喝茶的小鬼”赠送了您"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_below="@+id/tv_conttent_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_conttent_two"
                    android:text="50"
                    android:textColor="@color/colorBlack"
                    android:layout_marginHorizontal="@dimen/dp_4"
                    android:textSize="22sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_toRightOf="@+id/tv_conttent_two"
                    android:gravity="bottom"
                    android:textSize="12sp"
                    android:textColor="@color/colorBlack"
                    android:id="@+id/tv_conttent_three"
                    android:text="茶米，快去使用吧"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:layout_marginTop="@dimen/dp_20"
            android:text="TA的悄悄话："
            android:textSize="12sp"
            android:textColor="#1890FF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/tv_qiaoqoanhua"
            android:layout_marginTop="@dimen/dp_20"
            android:layout_width="match_parent"
            android:padding="@dimen/dp_4"
            android:layout_height="@dimen/dp_60"
            android:textColor="@color/colorBlack"
            android:background="@drawable/shop_fenlei_kuang"
            android:text="送你我的茶米分享我的快乐~" />

    </LinearLayout>

