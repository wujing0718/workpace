<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.TuiHuoTuiKuanActivity">

    <LinearLayout
        android:layout_above="@+id/bt_tijiao"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="@dimen/dp_50"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <TextView
                android:text="退货退款"
                android:textColor="@color/colorWhite"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <include
            android:layout_marginVertical="@dimen/dp_10"
            android:layout_marginHorizontal="@dimen/dp_20"
            layout="@layout/item_shouhuo_dingdan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="商品件数"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_shop_num"
                    android:text="1"
                    android:textColor="@color/colorBlack"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="退款金额"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_shop_price"
                    android:text="¥ 198.00"
                    android:layout_marginRight="@dimen/dp_15"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>

        <View
        android:background="#E8E8E8"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="退款原因"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/bt_tuikuan_yuanyin"
                    android:padding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_quxiao_yuanyin"
                        android:text="请选择"
                        android:layout_gravity="center_vertical"
                        android:textColor="#8F8E94"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_xiayibu"
                        android:layout_width="8dp"
                        android:layout_height="@dimen/dp_13" />


                </LinearLayout>


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_tuikuanshuoming"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="退款说明"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_tuikuanshuoming"
                    android:layout_toRightOf="@+id/tv_tuikuanshuoming"
                    android:paddingRight="@dimen/dp_45"
                    android:background="@null"
                    android:hint="请填写"
                    android:textSize="14sp"
                    android:maxLength="50"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </LinearLayout>

        <View
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"/>

        <LinearLayout
            android:orientation="vertical"
            android:paddingVertical="6dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_danhao"
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="快递单号"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_kuaididanhao"
                    android:layout_toRightOf="@+id/tv_danhao"
                    android:paddingRight="@dimen/dp_45"
                    android:background="@null"
                    android:hint="请填写"
                    android:textSize="14sp"
                    android:maxLength="20"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:gravity="right"
                    android:textColor="@color/colorBlack"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginLeft="@dimen/dp_15"
                    android:layout_marginVertical="@dimen/layout_margin_8dp"
                    android:text="快递公司"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:id="@+id/bt_kuaidi_gongsi"
                    android:padding="@dimen/dp_10"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_marginRight="@dimen/dp_15"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_kuaidi_name"
                        android:text="请选择"
                        android:layout_gravity="center_vertical"
                        android:textColor="#8F8E94"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_marginLeft="@dimen/dp_12"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_xiayibu"
                        android:layout_width="8dp"
                        android:layout_height="@dimen/dp_13" />


                </LinearLayout>

            </RelativeLayout>


        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginLeft="@dimen/dp_15"
                android:textColor="@color/colorBlack"
                android:text="上传凭证(最多三张）"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.huxq17.handygridview.HandyGridView
                android:layout_above="@+id/view_fabud_dingwei"
                android:id="@+id/gridView"
                android:layout_marginHorizontal="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none"
                android:columnWidth="60dp"
                android:horizontalSpacing="10dp"
                android:numColumns="3"
                android:verticalSpacing="10dp"
                android:layout_marginTop="10dp"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bt_tijiao"
        android:text="提交"
        android:textSize="17sp"
        android:layout_alignParentBottom="true"
        android:background="@color/colorBlack"
        android:gravity="center"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="44dp" />



</RelativeLayout>