<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:background="@drawable/black_kuang"
    android:layout_margin="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_marginTop="@dimen/dp_10"
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_wenzhang_touxiang"
            android:layout_width="22dp"
            android:layout_height="22dp" />

        <TextView
            android:id="@+id/tv_wenzhang_name"
            android:text="八马茶业"
            android:textSize="12sp"
            android:layout_marginLeft="7dp"
            android:layout_gravity="center_vertical"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_wenzhang_content"
        android:text="八马茶业股份有限公司源于百年前名扬东业股份有限公司源于百年前名扬东南亚的信记茶行茶行。"
        android:maxLines="4"
        android:layout_marginTop="@dimen/dp_10"
        android:ellipsize="end"
        android:layout_marginHorizontal="@dimen/dp_10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ImageView
        android:id="@+id/img_wenzhang_photo"
        android:scaleType="centerCrop"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_160" />

    <RelativeLayout
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wenzhang_time"
            android:textSize="11sp"
            android:text="2019-6-10   13:20"
            android:textColor="#818181"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/img_liulanliang"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_liulanliang_num"
                    android:text="20k"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/img_pinglun"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_pinglum_num"
                    android:text="20k"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_dianzan"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_xihuan"
                    android:src="@mipmap/img_xihuan"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_xihuan_num"
                    android:text="20k"
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>


</LinearLayout>