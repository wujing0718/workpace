<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:padding="15dp"
    android:layout_marginHorizontal="15dp"
    android:layout_marginVertical="@dimen/dp_10"
    android:background="@drawable/black_kuang"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/iv_select"
        android:layout_width="14dp"
        android:layout_height="14dp"
        android:visibility="gone"
        android:layout_marginRight="@dimen/dp_10"
        android:layout_gravity="center"
        android:background="@mipmap/unselect" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_dongtai_content"
            android:layout_marginTop="@dimen/layout_margin_4dp"
            android:text="      "
            android:maxLines="3"
            android:ellipsize="end"
            android:layout_width="wrap_content"
            android:textSize="14sp"
            android:textColor="#818181"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:layout_marginTop="@dimen/dp_10"
            android:id="@+id/rec_dongtai_photo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

        <RelativeLayout
            android:layout_marginTop="@dimen/dp_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_dongtai_time"
                android:text="04.18  15:09"
                android:textColor="#CDCDCD"
                android:textSize="10sp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_alignParentRight="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_pinglun"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/tv_dongtai_pingjianum"
                        android:text="20K"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/bt_dianzan"
                    android:layout_marginLeft="@dimen/icon_size_20dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_xihuan"
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_xihuan"
                        android:layout_width="14dp"
                        android:layout_height="14dp" />

                    <TextView
                        android:id="@+id/tv_dongtai_xihuannum"
                        android:text="20K"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/tv_dongtai_title"
        android:text=""
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/colorBlack"
        android:layout_height="wrap_content" />

</LinearLayout>