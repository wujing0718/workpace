            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:paddingVertical="@dimen/dp_10"
                android:background="@color/colorBlack"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="✓ 交易完成"
                    android:textSize="14sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginVertical="@dimen/dp_10"
                    android:text="签收时间：2019-06-08 11:56:30"
                    android:textSize="12sp"
                    android:textColor="@color/white"
                    android:layout_gravity="center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_gravity="center_horizontal"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_back_white"
                        android:layout_gravity="center_vertical"
                        android:layout_width="@dimen/dp_12"
                        android:layout_height="@dimen/dp_12" />


                    <TextView
                        android:text="恭喜获得1茶米！"
                        android:textSize="12sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/white"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:background="@drawable/black_kuang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90">

                <ImageView
                    android:id="@+id/img_wuliu"
                    android:layout_marginHorizontal="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_daifahuo"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_toRightOf="@+id/img_wuliu"
                    android:layout_toLeftOf="@+id/xiayibu1"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="查看物流"
                        android:textSize="17sp"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp"
                        android:text="2019-06-09  11：56：30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/xiayibu1"
                    android:layout_marginRight="@dimen/dp_6"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                 />

            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_20"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:background="@drawable/black_kuang"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_90">

                <ImageView
                    android:id="@+id/img_dizhi"
                    android:layout_marginHorizontal="15dp"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_daifahuo"
                    android:layout_width="40dp"
                    android:layout_height="40dp" />

                <LinearLayout
                    android:layout_toRightOf="@+id/img_dizhi"
                    android:layout_toLeftOf="@+id/xiayibu2"
                    android:orientation="vertical"
                    android:layout_centerVertical="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="李女士"
                            android:textSize="17sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="@dimen/dp_10"
                            android:text="15088888888"
                            android:textSize="14sp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_12sp"
                        android:layout_marginRight="20dp"
                        android:text="广东省深圳市龙岗区龙岗街道金地龙城中央2期7栋705"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <ImageView
                    android:layout_marginRight="@dimen/dp_6"
                    android:id="@+id/xiayibu2"
                    android:layout_width="@dimen/dp_16"
                    android:layout_height="@dimen/dp_16"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu" />

            </RelativeLayout>

            <View
                android:layout_marginTop="@dimen/dp_20"
                android:background="#8C8C8C"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_marginTop="@dimen/layout_margin_8dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/photo_check_default"
                        android:layout_gravity="center_vertical"
                        android:layout_width="26dp"
                        android:layout_height="26dp" />

                    <TextView
                        android:text="爱茶之人代购"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_dingdan_detail"
                    android:layout_width="match_parent"
                    android:layout_height="10dp">

                </android.support.v7.widget.RecyclerView>

                <TextView
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="@drawable/black_kuang"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:paddingVertical="@dimen/dp_4"
                    android:text="申请售后"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="运费"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="¥0.00"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="优惠券折扣"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="8折"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="茶米抵扣"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="- ¥0.10"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="实付款"
                            android:textSize="12sp"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:text="¥199.00"
                            android:textColor="@color/black"
                            android:textSize="12sp" />

                    </RelativeLayout>


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dp_10"
                android:background="#8C8C8C"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:layout_marginTop="8dp"
                    android:text="订单信息"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#818181"
                            android:textSize="12sp"
                            android:text="订单编号："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#818181"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="46695448724845"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                    <TextView
                        android:id="@+id/bt_fuzhi_dingdanhao"
                        android:layout_alignParentRight="true"
                        android:textSize="12sp"
                        android:text="复制"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:textColor="#818181"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#818181"
                            android:textSize="12sp"
                            android:text="创建时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#818181"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="2019-06-08 15:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#818181"
                            android:textSize="12sp"
                            android:text="付款时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#818181"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="2019-06-08 15:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#818181"
                            android:textSize="12sp"
                            android:text="发货时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#818181"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="2019-06-09 15:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_marginTop="15dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="#818181"
                            android:textSize="12sp"
                            android:text="完成时间："
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:textSize="12sp"
                            android:textColor="#818181"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="2019-06-11  15:00:00"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </LinearLayout>

                </RelativeLayout>


            </LinearLayout>

            <View
                android:layout_marginTop="8dp"
                android:layout_marginHorizontal="15dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <RelativeLayout
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:text="快递"
                    android:textSize="14sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="免邮"
                    android:textSize="14sp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <View
                android:layout_marginHorizontal="15dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_15"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:layout_gravity="center_vertical"
                    android:text="订单备注"
                    android:textSize="14sp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="送包装盒"
                    android:textSize="12sp"
                    android:textColor="#818181"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="@dimen/dp_20"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <View
                android:layout_marginHorizontal="15dp"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_marginBottom="@dimen/dp_50"
                android:layout_marginTop="@dimen/layout_padding_12dp"
                android:layout_gravity="right"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="共1件"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_marginLeft="@dimen/dp_14"
                    android:text="小计：199"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>


        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

