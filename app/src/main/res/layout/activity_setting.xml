<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.SettingActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="50dp"
                android:layout_height="44dp">

                <ImageView
                    android:src="@mipmap/img_back_white"
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </RelativeLayout>

            <TextView
                android:text="设置"
                android:textSize="17sp"
                android:layout_centerInParent="true"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <LinearLayout
            android:background="@drawable/black_kuang"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="12dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="14dp"
                    android:layout_marginLeft="@dimen/dp_10"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_my_touxiang"
                            android:layout_width="@dimen/layout_margin_64dp"
                            android:layout_height="@dimen/layout_margin_64dp" />

                        <TextView
                            android:text="V"
                            android:gravity="center"
                            android:background="@drawable/wode_dengji"
                            android:layout_gravity="bottom|right"
                            android:textColor="@color/colorRed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_my_name"
                                android:text="未登录"
                                android:textSize="17sp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:id="@+id/view_vip"
                                android:layout_gravity="center_vertical"
                                android:orientation="horizontal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <ImageView
                                    android:layout_marginLeft="3dp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@mipmap/img_vip"
                                    android:layout_width="16dp"
                                    android:layout_height="16dp" />

                                <TextView
                                    android:id="@+id/tv_my_vipnum"
                                    android:text=".1"
                                    android:textSize="@dimen/text_size_10sp"
                                    android:layout_gravity="bottom"
                                    android:layout_marginLeft="2dp"
                                    android:textColor="#F5C211"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_my_fenlei"
                                android:text=""
                                android:textSize="12sp"
                                android:textColor="#818181"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <LinearLayout
                                android:id="@+id/view_weizhi"
                                android:orientation="horizontal"
                                android:layout_gravity="center_vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <View
                                    android:layout_marginHorizontal="4dp"
                                    android:background="#818181"
                                    android:layout_gravity="center_vertical"
                                    android:layout_width="1dp"
                                    android:layout_height="14dp"/>

                                <TextView
                                    android:id="@+id/tv_my_weizhi"
                                    android:text=""
                                    android:textSize="12sp"
                                    android:textColor="#818181"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/tv_dianpu"
                                android:text="店铺"
                                android:visibility="gone"
                                android:layout_marginLeft="5dp"
                                android:paddingVertical="2dp"
                                android:paddingHorizontal="@dimen/dp_4"
                                android:background="@drawable/xiadan_kuang"
                                android:textSize="12sp"
                                android:textColor="#E51C23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/bt_bianji"
                    android:layout_marginRight="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="right"
                    android:layout_centerVertical="true"
                    android:text="编辑"
                    android:paddingHorizontal="12dp"
                    android:paddingVertical="2dp"
                    android:background="@drawable/login_kuang"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />



            </RelativeLayout>

            <LinearLayout
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/icon_size_20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="简介"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorWhite"
                    android:background="@drawable/black_di"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_my_jianjie"
                    android:textSize="12sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/colorBlack"
                    android:maxLines="2"
                    android:layout_gravity="center_vertical"
                    android:ellipsize="end"
                    android:text=""
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_10"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bt_renzheng"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="认证"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_shouhuodizhi"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="收货地址"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_anquanzhongxin"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="安全中心"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_yonghuxieyi"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="用户协议"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_qingchuhuancun"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="清除缓存"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_huancun"
                    android:text="0KB"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_obout"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <TextView
                    android:text="关于"
                    android:textSize="16sp"
                    android:layout_centerVertical="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <ImageView
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bt_tuichudenglu"
        android:text="退出当前账户"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:layout_alignParentBottom="true"
        android:background="@drawable/black_di"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_width="match_parent"
        android:layout_marginBottom="20dp"
        android:layout_height="@dimen/icon_size_40dp" />

</RelativeLayout>