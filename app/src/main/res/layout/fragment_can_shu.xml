                    android:textColor="#959595"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="净含量："
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#959595"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="50dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:text="品牌："
                    android:textSize="14sp"
                    android:textColor="#959595"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="茶类："
                    android:layout_marginTop="10dp"
                    android:textSize="14sp"
                    android:textColor="#959595"
                    android:layout_width="wrap_content"
