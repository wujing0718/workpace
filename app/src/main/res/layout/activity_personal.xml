<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context=".WoDe.Activity.PersonalActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="50dp"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </RelativeLayout>

            <TextView
                android:text="个人信息"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="70dp">

            <TextView
                android:text="头像"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_wode_touxiang"
                    android:layout_gravity="center_vertical"
                    android:layout_width="44dp"
                    android:layout_height="44dp" />

                <ImageView
                    android:layout_marginLeft="12dp"
                    android:src="@mipmap/img_xiayibu"
                    android:layout_gravity="center_vertical"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />


            </LinearLayout>

        </RelativeLayout>

        <View
            android:layout_marginHorizontal="15dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="昵称"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_wode_name"
                android:maxLength="8"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:textSize="14sp"
                android:hint="请输入你的名称"
                android:background="@null"
                android:singleLine="true"
                android:gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:layout_width="200dp"
                android:layout_height="30dp" />

        </RelativeLayout>

        <View
            android:layout_marginHorizontal="15dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:text="个性签名"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/edt_wode_jianjie"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:hint="请输入你的个人简介"
                android:maxLength="30"
                android:textSize="14sp"
                android:background="@null"
                android:singleLine="true"
                android:gravity="right|center_vertical"
                android:layout_marginRight="15dp"
                android:layout_width="200dp"
                android:layout_height="30dp" />

        </RelativeLayout>

        <View
            android:layout_marginHorizontal="15dp"
            android:background="#E8E8E8"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <RelativeLayout
            android:id="@+id/bt_xuanzediqu"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:id="@+id/tv_wode_weizhi"
                android:text="我的地区"
                android:textSize="17sp"
                android:layout_marginLeft="15dp"
                android:textColor="@color/colorBlack"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <ImageView
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:src="@mipmap/img_xiayibu"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

    </LinearLayout>

    <TextView
        android:id="@+id/bt_xiugai_xinxi"
        android:text="完成"
        android:textSize="17sp"
        android:textColor="@color/colorWhite"
        android:background="@drawable/black_di"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:layout_marginHorizontal="@dimen/dp_40"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="40dp" />


</RelativeLayout>