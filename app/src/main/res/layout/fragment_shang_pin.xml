<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".Shop.Fragment.ShangPinFragment">

    <android.support.v4.widget.NestedScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
            
            <com.youth.banner.Banner
                android:id="@+id/banner"
                android:layout_width="match_parent"
                android:layout_height="370dp">

            </com.youth.banner.Banner>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">

                <LinearLayout
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="¥"
                        android:textSize="20sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="189"
                        android:textSize="30sp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="@dimen/dp_10"
                        android:id="@+id/tv_yuan_price"
                        android:layout_marginBottom="2dp"
                        android:text="¥189"
                        android:textColor="@color/colorHui"
                        android:textSize="12sp"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp">

                    <TextView
                        android:paddingVertical="3dp"
                        android:layout_gravity="center_vertical"
                        android:paddingHorizontal="8dp"
                        android:background="@drawable/kaquan_kuang"
                        android:text="放入仓库"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:src="@mipmap/img_back"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="50dp"
                        android:layout_height="50dp">

                        <ImageView
                            android:src="@mipmap/img_back"
                            android:layout_centerInParent="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />


                    </RelativeLayout>


                </LinearLayout>

            </RelativeLayout>

            <TextView
                android:textColor="@color/colorBlack"
                android:layout_marginHorizontal="15dp"
                android:textSize="14sp"
                android:layout_marginTop="15dp"
                android:text="白茶寿眉茶叶陈年太姥山老白茶春季寿眉茶一饼300克两行字的站位"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginTop="20dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:layout_marginHorizontal="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                    <TextView
                        android:textColor="@color/colorHui"
                        android:layout_centerVertical="true"
                        android:text="快递：0.00"
                        android:textSize="12sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                <TextView
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorHui"
                    android:text="销量：10w"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:textColor="@color/colorHui"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:text="地址：广东深圳"
                    android:textSize="12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>

            <View
                android:background="#F8F8F8"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/bt_detail_lingquan"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:text="领券"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="100dp"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text="199减10"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text="299减15"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                    

                </RelativeLayout>

                <View
                    android:layout_marginHorizontal="15dp"
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_detail_fuwu"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:text="服务"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="100dp"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text="正品保障"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text="7天无忧退货"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>

                <View
                    android:layout_marginHorizontal="15dp"
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_detail_guige"
                    android:layout_width="match_parent"
                    android:layout_height="45dp">

                    <TextView
                        android:text="规格"
                        android:layout_marginLeft="15dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="14sp"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginLeft="100dp"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text="重量"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/colorBlack"
                            android:textSize="14sp"
                            android:text=""
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <ImageView
                        android:layout_marginRight="15dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:src="@mipmap/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </RelativeLayout>


            </LinearLayout>
            
            <View
                android:background="#F8F8F8"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                        <TextView
                            android:text="店铺详情"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </RelativeLayout>
                
                <android.support.v7.widget.CardView
                    app:cardCornerRadius="8dp"
                    android:layout_margin="20dp"
                    app:cardBackgroundColor="@color/colorHui"
                    android:layout_width="match_parent"
                    android:layout_height="70dp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent">

                            <ImageView
                                android:layout_marginLeft="15dp"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/ic_launcher"
                                android:layout_width="44dp"
                                android:layout_height="44dp" />

                            <LinearLayout
                                android:layout_marginLeft="@dimen/dp_10"
                                android:layout_gravity="center_vertical"
                                android:orientation="vertical"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:text="XXX牌"
                                    android:textSize="17sp"
                                    android:textColor="@color/colorBlack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                                <TextView
                                    android:text="品牌简介or没有"
                                    android:textSize="12sp"
                                    android:textColor="@color/colorBlack"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content" />

                            </LinearLayout>

                        </LinearLayout>

                        <TextView
                            android:paddingVertical="5dp"
                            android:layout_gravity="center_vertical"
                            android:paddingHorizontal="12dp"
                            android:background="@drawable/kaquan_kuang"
                            android:text="+ 关注"
                            android:layout_marginRight="15dp"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                </android.support.v7.widget.CardView>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                        <TextView
                            android:text="商品详情"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </RelativeLayout>
                
                <ImageView
                    android:scaleType="fitXY"
                    android:src="@mipmap/ic_launcher"
                    android:layout_width="match_parent"
                    android:layout_height="500dp" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp">

                    <LinearLayout
                        android:layout_centerInParent="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                        <TextView
                            android:text="特别说明"
                            android:textSize="14sp"
                            android:layout_marginHorizontal="15dp"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/black"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <View
                            android:layout_gravity="center_vertical"
                            android:background="#BBBBBB"
                            android:layout_width="50dp"
                            android:layout_height="1dp"/>

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="价格说明"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="25dp"
                        android:textColor="@color/colorBlack"
                        android:text="划线价格为原价，未划线价格为实际价格"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="运费说明"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginHorizontal="25dp"
                        android:text="江浙沪北上广包邮，偏远地区（青海、西藏、新疆、内蒙）需另加运费"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:text="售后说明"
                        android:layout_marginTop="12dp"
                        android:layout_marginLeft="15dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:layout_marginLeft="25dp"
                        android:layout_marginTop="10dp"
                        android:textColor="@color/colorBlack"
                        android:layout_marginHorizontal="25dp"
                        android:textSize="14sp"
                        android:text="未影响二次销售的前提之下支持7天无理由退货、特殊商品除外"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <View
                    android:background="#F8F8F8"
                    android:layout_marginTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="10dp"/>


            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <TextView
                        android:text="相关推荐"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="15dp"
                        android:textSize="17sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/rec_shangpin_tuijian"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                </android.support.v7.widget.RecyclerView>

            </LinearLayout>

            <RelativeLayout
                android:layout_gravity="bottom|right"
                android:layout_marginRight="15dp"
                android:layout_width="match_parent"
                android:layout_height="80dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/bt_kefu"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="6dp"
                    app:cardPreventCornerOverlap="true"
                    android:layout_width="44dp"
                    android:layout_height="44dp">

                    <LinearLayout
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="客服"
                            android:textSize="10sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <LinearLayout
                    android:gravity="center_vertical"
                    android:layout_toRightOf="@+id/bt_kefu"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <android.support.v7.widget.CardView
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:id="@+id/bt_jiagouwuche"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="加入购物车"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>

                    <android.support.v7.widget.CardView
                        android:id="@+id/bt_goumai"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        app:cardCornerRadius="30dp"
                        app:cardElevation="6dp"
                        app:cardPreventCornerOverlap="true"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp">

                        <LinearLayout
                            android:layout_gravity="center"
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="立即购买"
                                android:textSize="12sp"
                                android:layout_marginTop="4dp"
                                android:layout_gravity="center_horizontal"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                    </android.support.v7.widget.CardView>



                </LinearLayout>


            </RelativeLayout>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</FrameLayout>