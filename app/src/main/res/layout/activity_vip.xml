<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.VIPActivity">
    <View
        android:background="#CCD2AD5D"
        android:id="@+id/statusBarView"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>

    <FrameLayout
        android:background="@mipmap/img_vip_bg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="@dimen/dp_50"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <TextView
                android:text="尊贵会员"
                android:textSize="@dimen/sp_17"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <android.support.v7.widget.CardView
            app:cardCornerRadius="@dimen/dp_6"
            android:layout_marginHorizontal="@dimen/dp_20"
            android:layout_gravity="bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingHorizontal="@dimen/dp_20"
                android:background="@mipmap/img_vip_huizhang"
                android:layout_gravity="bottom"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_180">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_24"
                    android:layout_marginHorizontal="@dimen/dp_20"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="VIP0"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="VIP1"
                            android:textColor="@color/colorWhite"
                            android:layout_alignParentRight="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </RelativeLayout>

                    <ProgressBar
                        android:layout_marginTop="@dimen/dp_3"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:layout_width="match_parent"
                        android:progressDrawable="@drawable/progressbg"
                        android:max="100"
                        android:progress="50"
                        android:layout_height="3dp" />

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginBottom="30dp"
                    android:layout_alignParentBottom="true"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="+10"
                            android:textSize="17sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/sousuoTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="今日成长值"
                            android:textSize="12sp"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="规则"
                            android:textSize="17sp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/sousuoTab"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="如何升级？"
                            android:textSize="12sp"
                            android:layout_marginTop="@dimen/dp_4"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorWhite"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </RelativeLayout>

            </RelativeLayout>

        </android.support.v7.widget.CardView>


    </FrameLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_20"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_huiyuan_yes"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="会员标识"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_dianpu_yes"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="线上店铺"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_chami_yes"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="茶米福利"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_zhiding_yes"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="置顶权限"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_fangsaorao_no"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="防止骚扰"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@mipmap/img_kefu_yes"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="45dp"
                        android:layout_height="45dp" />

                    <TextView
                        android:text="专属客服"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="@dimen/dp_6"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dp_20"
                android:background="#CDCDCD"
                android:layout_width="match_parent"
                android:layout_height="5dp"/>

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>