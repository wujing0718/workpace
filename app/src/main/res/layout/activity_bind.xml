<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.BindActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/dp_50"
            android:layout_height="44dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />

        </RelativeLayout>

        <TextView
            android:text="绑定手机号"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/img_login_phone"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <EditText
                        android:id="@+id/edt_login_phone"
                        android:hint="请输入手机号"
                        android:textSize="14sp"
                        android:phoneNumber="true"
                        android:background="@null"
                        android:maxLength="11"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <View
                    android:layout_marginTop="4dp"
                    android:background="@color/colorXian"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yanzhengmadenglu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/img_yanzhengma"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <EditText
                            android:id="@+id/edt_login_code"
                            android:hint="请输入验证码"
                            android:textSize="14sp"
                            android:maxLength="4"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="180dp"
                            android:layout_height="30dp" />

                        <View
                            android:background="@color/colorXian"
                            android:layout_gravity="center_vertical"
                            android:layout_width="1dp"
                            android:layout_height="25dp"/>

                        <RelativeLayout
                            android:id="@+id/bt_login_code"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/tv_login_code"
                                android:text="获取验证码"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="4dp"
                        android:background="@color/colorXian"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/mimadenglu"
                android:orientation="vertical"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/img_yanjing"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <EditText
                            android:id="@+id/edt_login_password"
                            android:password="true"
                            android:hint="请输入密码"
                            android:maxLength="11"
                            android:textSize="14sp"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="4dp"
                        android:background="@color/colorXian"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bt_yanzhengmadenglu"
                        android:layout_alignParentRight="true"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="11sp"
                        android:text="验证码登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/bt_login"
                android:layout_marginTop="60dp"
                android:background="@drawable/black_di"
                android:layout_marginHorizontal="38dp"
                android:text="绑定手机号"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>


    </RelativeLayout>



</LinearLayout>