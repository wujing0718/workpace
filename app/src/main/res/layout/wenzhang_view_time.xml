<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/view_time"
        android:layout_above="@+id/view_pinglun_fasong"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_wenzhang_time"
            android:textSize="11sp"
            android:text="2019-6-10   13:20"
            android:textColor="#818181"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/img_liulanliang"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_liulanliang_num"
                    android:text=""
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:src="@mipmap/img_pinglun"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_pinglum_num"
                    android:text=""
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/bt_dianzan"
                android:layout_marginLeft="15dp"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_xihuan"
                    android:src="@mipmap/img_xihuan"
                    android:layout_width="14dp"
                    android:layout_height="14dp" />

                <TextView
                    android:id="@+id/tv_xihuan_num"
                    android:text=""
                    android:textSize="10sp"
                    android:layout_marginLeft="4dp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>