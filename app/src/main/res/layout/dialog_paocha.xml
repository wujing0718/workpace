<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/login_kuang"
    android:layout_marginHorizontal="30dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="绿茶 ¥15"
            android:textSize="20sp"
            android:layout_marginVertical="6dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <View
            android:background="#BBBBBB"
            android:layout_width="match_parent"
            android:layout_height="1dp"/>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="叶底"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/radiogroup_yedi"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radiobutton_youyedi"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="有叶底"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/selector_paocha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:id="@+id/radiobutton_wuyedi"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="无叶底"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/selector_paocha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </RadioGroup>


            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="30dp">

            <TextView
                android:text="浓度"
                android:textSize="14sp"
                android:layout_gravity="center_vertical"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_marginHorizontal="@dimen/dp_10"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RadioGroup
                    android:id="@+id/radiogroup_nongdu"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <RadioButton
                        android:id="@+id/radiobutton_biaozhun"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="标准"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/selector_paocha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:id="@+id/radiobutton_nong"
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="浓"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/selector_paocha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:id="@+id/radiobutton_dan"
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="淡"
                        android:gravity="center"
                        android:paddingHorizontal="6dp"
                        android:textSize="12sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/selector_paocha"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />


                </RadioGroup>



            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="数量"
                android:textSize="14sp"
                android:layout_centerVertical="true"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <com.huohougongfu.app.Utils.AmountView
                android:id="@+id/amountview"
                android:layout_marginRight="15dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                app:btnTextSize="12sp"
                app:btnWidth="30dp"
                app:tvWidth="50dp"/>


        </RelativeLayout>

        <LinearLayout
            android:layout_marginBottom="20dp"
            android:layout_marginTop="18dp"
            android:layout_width="match_parent"
            android:layout_height="36dp">

                <Button
                    android:id="@+id/bt_fangruchatai"
                    android:layout_marginRight="100dp"
                    android:layout_weight="1"
                    android:text="放入茶台"
                    android:textSize="12sp"
                    android:layout_marginLeft="15dp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:gravity="center"
                    android:background="@drawable/selector_paocha"
                    android:button="@null"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />

                <Button
                    android:id="@+id/bt_lijixiadan"
                    android:button="@null"
                    android:text="立即下单"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:textSize="12sp"
                    android:layout_marginRight="15dp"
                    android:layout_gravity="center_vertical|right"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/selector_paocha"
                    android:layout_width="100dp"
                    android:layout_height="30dp" />


        </LinearLayout>

    </LinearLayout>

</LinearLayout>