<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.ZhuanKeActivity">

    <ImageView
        android:id="@+id/img_zhuanke_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:scaleType="centerCrop" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="50dp"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <TextView
                android:text="赚客"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginRight="@dimen/dp_40"
            android:layout_gravity="right"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_biaoyu"
                android:text="标语口号"
                android:gravity="center"
                android:textColor="@color/white"
                android:textSize="24sp"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_guize"
                android:layout_gravity="center_horizontal"
                android:text="规则详情"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_4"
                android:textColor="@color/colorWhite"
                android:layout_width="@dimen/dp_120"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl"
            android:layout_marginVertical="@dimen/dp_10"
            android:background="@drawable/kaquan_kuang"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:tl_divider_color="#1A000000"
            app:tl_indicator_color="#CCBA91"
            android:layout_marginHorizontal="15dp"
            app:tl_indicator_corner_radius="3dp"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="#CCBA91"
            app:tl_textUnselectColor="#CDCDCD"
            app:tl_textsize="17sp" />

        <android.support.v4.view.ViewPager
            android:id="@+id/vp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>


</FrameLayout>