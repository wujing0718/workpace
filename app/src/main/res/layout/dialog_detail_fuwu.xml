<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/view_jichufuwu"
        android:orientation="vertical"
        android:background="@drawable/kaquan_kuang"
        android:layout_above="@+id/view_qita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="基础服务"
            android:layout_marginVertical="15dp"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rec_shangpin_fuwu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </android.support.v7.widget.RecyclerView>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/view_qita"
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_above="@+id/bt_wancheng"
        android:paddingVertical="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="其他"
            android:layout_gravity="center_horizontal"
            android:textColor="@color/colorBlack"
            android:textSize="17sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_marginLeft="20dp"
                android:src="@mipmap/img_duihao"
                android:layout_width="16dp"
                android:layout_height="16dp" />

            <TextView
                android:id="@+id/tv_fuwu_qita"
                android:text="信用卡"
                android:layout_marginLeft="20dp"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

    </LinearLayout>


    <RelativeLayout
        android:id="@+id/bt_wancheng"
        android:background="@color/colorBlack"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <TextView
            android:text="完成"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />


    </RelativeLayout>



</RelativeLayout>