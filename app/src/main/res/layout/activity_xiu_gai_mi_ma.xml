<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.XiuGaiMiMaActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/dp_50"
            android:layout_height="44dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />

        </RelativeLayout>

        <TextView
            android:textColor="@color/colorWhite"
            android:text="修改密码"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_40">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="旧密码"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_oldpassword"
                        android:background="@null"
                        android:layout_gravity="center_vertical"
                        android:hint="请输入旧密码"
                        android:gravity="right|center_vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:password="true"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorHui"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30" />


                </LinearLayout>

                <View
                    android:background="@color/colorHui"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="新密码"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_xinpd1"
                        android:hint="请输入新密码"
                        android:layout_gravity="center_vertical"
                        android:password="true"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:textSize="14sp"
                        android:textColorHint="@color/colorHui"
                        android:textColor="@color/colorBlack"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30" />



                </LinearLayout>

                <View
                    android:background="@color/colorHui"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <LinearLayout
                    android:layout_marginLeft="26dp"
                    android:layout_marginRight="26dp"
                    android:orientation="horizontal"
                    android:layout_marginTop="26dp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:layout_gravity="center_vertical"
                        android:text="确认密码"
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:password="true"
                        android:id="@+id/edt_xinpd2"
                        android:layout_gravity="center_vertical"
                        android:textSize="14sp"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:hint="请输入确认密码"
                        android:background="@null"
                        android:gravity="right|center_vertical"
                        android:textColorHint="@color/colorHui"
                        android:textColor="@color/black"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30" />

                </LinearLayout>

                <View
                    android:background="@color/colorHui"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>

                <TextView
                    android:id="@+id/bt_wangjimima"
                    android:text="忘记密码?"
                    android:padding="@dimen/dp_10"
                    android:layout_gravity="right"
                    android:layout_marginHorizontal="@dimen/dp_30"
                    android:textSize="@dimen/text_size_12sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_xiugai"
            android:layout_margin="26dp"
            android:text="修改密码"
            android:textSize="16sp"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@drawable/black_di"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_40" />

    </RelativeLayout>
</LinearLayout>