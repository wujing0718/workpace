<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.MyFragment">

    <View
        android:id="@+id/statusBarView"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="10dp">

    </View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_setting"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bt_duihua"
            android:layout_alignParentRight="true"
            android:layout_width="50dp"
            android:layout_height="44dp">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>


    </RelativeLayout>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginHorizontal="@dimen/icon_size_20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_my_touxiang"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="@dimen/layout_margin_64dp"
                            android:layout_height="@dimen/layout_margin_64dp" />

                        <TextView
                            android:text="V"
                            android:gravity="center"
                            android:background="@drawable/wode_dengji"
                            android:layout_gravity="bottom|right"
                            android:textColor="@color/colorRed"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </FrameLayout>

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_my_name"
                                android:text="寄与爱茶人"
                                android:textSize="17sp"
                                android:layout_gravity="center_vertical"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <ImageView
                                android:layout_marginLeft="3dp"
                                android:layout_gravity="center_vertical"
                                android:src="@mipmap/img_vip"
                                android:layout_width="16dp"
                                android:layout_height="16dp" />

                            <TextView
                                android:id="@+id/tv_my_vipnum"
                                android:text=".1"
                                android:textSize="@dimen/text_size_10sp"
                                android:layout_gravity="bottom"
                                android:layout_marginLeft="2dp"
                                android:textColor="#F5C211"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="ID："
                                android:textColor="#818181"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:id="@+id/tv_my_id"
                                android:text="123456"
                                android:textColor="#818181"
                                android:textSize="12sp"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_marginTop="6dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:id="@+id/tv_my_fenlei"
                                android:text="茶艺师"
                                android:textSize="12sp"
                                android:textColor="#818181"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <View
                                android:layout_marginHorizontal="4dp"
                                android:background="#818181"
                                android:layout_gravity="center_vertical"
                                android:layout_width="1dp"
                                android:layout_height="14dp"/>

                            <TextView
                                android:id="@+id/tv_my_weizhi"
                                android:text="深圳"
                                android:textSize="12sp"
                                android:textColor="#818181"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:text="店铺"
                                android:layout_marginLeft="5dp"
                                android:paddingVertical="2dp"
                                android:paddingHorizontal="@dimen/dp_4"
                                android:background="@drawable/xiadan_kuang"
                                android:textSize="12sp"
                                android:textColor="#E51C23"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_my_guanzhunum"
                            android:text="50"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="关注"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="@dimen/icon_size_20dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_my_fensinum"
                            android:text="1.6k"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:layout_gravity="center_horizontal"
                            android:textStyle="bold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:text="粉丝"
                            android:textSize="12sp"
                            android:layout_gravity="center_horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </RelativeLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginHorizontal="@dimen/icon_size_20dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="简介"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="2dp"
                    android:textSize="12sp"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:background="@drawable/xiadan_kuang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_my_jianjie"
                    android:textSize="12sp"
                    android:layout_marginLeft="14dp"
                    android:textColor="@color/colorBlack"
                    android:maxLines="2"
                    android:ellipsize="end"
                    android:text="这里是我的个性签名啊一二三四五六七八九十一二三四五六七八九十"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_40">

                <RelativeLayout
                    android:id="@+id/bt_my_gouwuche"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/img_gouwuche"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>

                <View
                    android:layout_marginHorizontal="@dimen/icon_size_20dp"
                    android:background="#E8E8E8"
                    android:layout_gravity="center_vertical"
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <RelativeLayout
                    android:id="@+id/bt_my_shoucang"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/img_back"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <View
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/icon_size_20dp"
                    android:background="#E8E8E8"
                    android:layout_width="1dp"
                    android:layout_height="20dp"/>

                <RelativeLayout
                    android:id="@+id/bt_my_kabao"
                    android:layout_weight="1"
                    android:layout_gravity="center_vertical"
                    android:layout_width="40dp"
                    android:layout_height="match_parent">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/img_kabao"
                        android:layout_width="22dp"
                        android:layout_height="22dp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">

                <android.support.v7.widget.CardView
                    android:id="@+id/bt_my_dianpu"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#E8E8E8"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="我的店铺"
                            android:layout_marginLeft="15dp"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="@dimen/icon_size_20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="上架产品"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="@dimen/icon_size_20dp"
                                android:text="50"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:id="@+id/bt_my_dongtai"
                    app:cardElevation="6dp"
                    app:cardBackgroundColor="#E8E8E8"
                    android:layout_marginHorizontal="5dp"
                    android:layout_gravity="center_vertical"
                    app:cardCornerRadius="@dimen/dp_10"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="100dp">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="我的动态"
                            android:layout_marginLeft="15dp"
                            android:textSize="17sp"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <LinearLayout
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="@dimen/icon_size_20dp"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content">

                            <TextView
                                android:text="发布动态"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                            <TextView
                                android:layout_marginLeft="@dimen/icon_size_20dp"
                                android:text="10"
                                android:textSize="12sp"
                                android:textColor="@color/colorBlack"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />


                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/login_kuang"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="我的订单"
                        android:textSize="14sp"
                        android:layout_marginVertical="@dimen/layout_padding_12dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#030303"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/bt_dingdan_quanbu"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:paddingVertical="@dimen/dp_10"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="查看全部"
                            android:textSize="14sp"
                            android:textColor="#8F8E94"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/img_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginHorizontal="15dp"
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="34dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/bt_dingdan_daifukuan"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="待付款"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_dingdan_daifahuo"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="待发货"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_dingdan_daishouhuo"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="待收货"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_dingdan_pingjia"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="评价"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_dingdan_shouhou"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="售后"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:background="@drawable/login_kuang"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="@dimen/icon_size_20dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:text="我的会员"
                        android:textSize="14sp"
                        android:layout_marginVertical="@dimen/layout_padding_12dp"
                        android:layout_marginLeft="15dp"
                        android:textColor="#030303"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:id="@+id/bt_huiyuan_quanbu"
                        android:paddingVertical="@dimen/dp_10"
                        android:layout_marginRight="12dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="查看全部"
                            android:textSize="14sp"
                            android:textColor="#8F8E94"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:layout_marginLeft="12dp"
                            android:src="@mipmap/img_back"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:layout_marginHorizontal="15dp"
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:layout_marginVertical="12dp"
                    android:layout_marginHorizontal="34dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:id="@+id/bt_huiyuan_fenxiao"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="分销"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_huiyuan_huodong"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="活动"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_huiyuan_tuiguang"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="推广"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/bt_huiyuan_kaidian"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_horizontal"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="22dp"
                            android:layout_height="22dp" />

                        <TextView
                            android:text="开店"
                            android:textSize="12sp"
                            android:layout_marginTop="4dp"
                            android:layout_gravity="center_horizontal"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bt_my_fenxiang"
                android:layout_marginBottom="@dimen/dp_40"
                android:layout_marginHorizontal="15dp"
                android:layout_marginTop="@dimen/icon_size_20dp"
                android:background="@drawable/login_kuang"
                android:layout_width="match_parent"
