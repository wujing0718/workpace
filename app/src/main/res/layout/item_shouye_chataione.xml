<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:id="@+id/bt_chatai"
    android:paddingVertical="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/img_check"
        android:layout_marginLeft="@dimen/dp_12"
        android:layout_gravity="center_vertical"
        android:layout_width="18dp"
        android:layout_height="18dp" />

    <ImageView
        android:id="@+id/img_chatai_photo"
        android:layout_marginLeft="12dp"
        android:layout_width="88dp"
        android:layout_height="88dp" />

    <LinearLayout
        android:layout_marginLeft="@dimen/dp_10"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="88dp">
        
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_chatai_title"
                android:text="绿茶"
                android:textSize="14sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_chatai_hasDust"
                    android:text="有叶底"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorHui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:text="/"
                    android:layout_marginHorizontal="@dimen/dp_4"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorHui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_chatai_concentration"
                    android:text="浓"
                    android:textSize="12sp"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/colorHui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/tv_chatai_price"
                android:text="¥10"
                android:layout_alignParentBottom="true"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <RelativeLayout
                android:layout_marginRight="@dimen/dp_10"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <!--<com.huohougongfu.app.Utils.AmountView-->
                    <!--android:id="@+id/amoutview"-->
                    <!--android:layout_centerInParent="true"-->
                    <!--android:layout_alignParentBottom="true"-->
                    <!--android:layout_marginRight="15dp"-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="28dp"-->
                    <!--app:btnTextSize="12sp"-->
                    <!--app:btnWidth="30dp"-->
                    <!--app:tvWidth="40dp"/>-->

                <!--使用默认UI属性-->
                <com.mcxtzhang.lib.AnimShopButton
                    android:id="@+id/amountview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_gravity="right"
                    app:maxCount="99999" />

            </RelativeLayout>


        </RelativeLayout>

    </LinearLayout>

</LinearLayout>