<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".QuanZi.Activity.JuBaoActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="50dp"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />


            </RelativeLayout>

            <TextView
                android:text="举报"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="44dp">

                    <TextView
                        android:text="投诉"
                        android:layout_marginLeft="12dp"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_tousu_usrname"
                        android:text="测试123"
                        android:textSize="14sp"
                        android:layout_marginLeft="@dimen/dp_10"
                        android:layout_gravity="center_vertical"
                        android:textColor="#3592FF"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <LinearLayout
                    android:background="@drawable/xiadan_kuang"
                    android:orientation="horizontal"
                    android:layout_marginHorizontal="12dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_tousu_photo"
                        android:layout_marginVertical="10dp"
                        android:layout_marginLeft="12dp"
                        android:layout_width="68dp"
                        android:layout_height="68dp" />

                    <TextView
                        android:id="@+id/tv_tousu_title"
                        android:layout_gravity="center_vertical"
                        android:maxLines="3"
                        android:ellipsize="end"
                        android:textSize="12sp"
                        android:layout_marginHorizontal="@dimen/dp_10"
                        android:text=""
                        android:textColor="@color/black"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <TextView
                    android:text="投诉类型"
                    android:layout_marginTop="@dimen/icon_size_20dp"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_20"
                    android:layout_marginHorizontal="@dimen/dp_15"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/radio_button1"
                            android:text="垃圾营销"
                            android:clickable="true"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button2"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="色情低俗"
                            android:button="@null"
                            android:clickable="true"
                            android:gravity="center"
                            android:background="@drawable/selector_radio"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button3"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="虚假欺骗"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginVertical="@dimen/dp_10"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/radio_button4"
                            android:text="广告骚扰"
                            android:button="@null"
                            android:clickable="true"
                            android:background="@drawable/selector_radio"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button5"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="政治敏感"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button6"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="违法信息"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:background="@drawable/selector_radio"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <CheckBox
                            android:id="@+id/radio_button7"
                            android:text="侵权投诉"
                            android:button="@null"
                            android:clickable="true"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:background="@drawable/selector_radio"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button8"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="违禁内容"
                            android:button="@null"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:background="@drawable/selector_radio"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <CheckBox
                            android:id="@+id/radio_button9"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:text="其他违规"
                            android:button="@null"
                            android:background="@drawable/selector_radio"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:drawablePadding="@dimen/dp_6"
                            android:textColor="@drawable/text_jubao"
                            android:paddingVertical="@dimen/dp_4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />



                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:text="备注"
                    android:layout_marginTop="@dimen/icon_size_20dp"
                    android:layout_marginLeft="@dimen/sp_12"
                    android:textColor="@color/colorBlack"
                    android:textSize="14sp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_phone"
                    android:layout_marginHorizontal="38dp"
                    android:background="@drawable/kaquan_kuang"
                    android:textSize="14sp"
                    android:gravity="top"
                    android:paddingVertical="@dimen/dp_6"
                    android:paddingLeft="@dimen/dp_10"
                    android:layout_marginVertical="@dimen/dp_10"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_80" />

                <Button
                    android:id="@+id/bt_tijiao"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/icon_size_40dp"
                    android:layout_marginHorizontal="38dp"
                    android:layout_marginTop="@dimen/dp_30"
                    android:background="#CCBA91"
                    android:text="提交"
                    android:textColor="@color/colorWhite" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>