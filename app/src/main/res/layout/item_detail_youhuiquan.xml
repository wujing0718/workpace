<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="12dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        app:cardCornerRadius="10dp"
        android:layout_margin="@dimen/dp_10"
        android:layout_width="match_parent"
        android:layout_height="100dp">

        <RelativeLayout
            android:background="@mipmap/img_youhuiquan_bg"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <LinearLayout
                android:layout_centerVertical="true"
                android:layout_marginLeft="30dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_youhuiquan_money"
                    android:text=""
                    android:textSize="20sp"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_youhuiquan_serviceRegulations"
                    android:text=""
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/tv_youhuiquan_endTime"
                    android:text=""
                    android:layout_marginTop="2dp"
                    android:textSize="12sp"
                    android:textColor="#555555"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/bt_lingquyouhuiquan"
                android:layout_alignParentRight="true"
                android:layout_width="100dp"
                android:layout_height="match_parent">

                <!--<TextView-->
                    <!--android:layout_width="2dp"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:layerType="software"-->
                    <!--android:background="@drawable/kaquan_xuxian"/>-->

                <TextView
                    android:text="立即领取"
                    android:textSize="14sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/white"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>

        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>