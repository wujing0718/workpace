<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Shop.Activity.ShangPinDetailActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="44dp"
            android:layout_height="44dp">

            <ImageView
                android:src="@mipmap/img_back_white"
                android:layout_centerInParent="true"
                android:layout_width="20dp"
                android:layout_height="20dp" />

        </RelativeLayout>

        <com.flyco.tablayout.SlidingTabLayout
            android:layout_centerVertical="true"
            android:id="@+id/stl"
            android:layout_marginHorizontal="80dp"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            app:tl_indicator_corner_radius ="3dp"
            app:tl_textsize="17sp"
            app:tl_indicator_color="@color/white"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/white"
            app:tl_textUnselectColor="#A0A0A0"
            />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/bt_gouwuche"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="44dp">

                <ImageView
                    android:src="@mipmap/img_gouwuche_white"
                    android:layout_centerInParent="true"
                    android:layout_width="22dp"
                    android:layout_height="22dp" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bt_xiaoxi"
                android:layout_weight="1"
                android:layout_width="40dp"
                android:layout_height="44dp">

                <ImageView
                    android:src="@mipmap/img_xiaoxi"
                    android:layout_centerInParent="true"
                    android:layout_width="20dp"
                    android:layout_height="20dp" />

            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/vp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</LinearLayout>