<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_white"
    tools:context=".WoDe.Activity.DaShiRenZhengActivity">

    <LinearLayout
        android:id="@+id/view"
        android:layout_above="@+id/bt_chashi_tijiao"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/view_renzheng_tab"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_44">

            <RelativeLayout
                android:id="@+id/bt_finish"
                android:layout_width="50dp"
                android:layout_height="@dimen/dp_44">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back_white"
                    android:layout_width="18dp"
                    android:layout_height="18dp" />

            </RelativeLayout>

            <TextView
                android:layout_centerInParent="true"
                android:text="认证"
                android:textSize="17sp"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

        <ImageView
            android:src="@mipmap/img_shenfenrenzheng"
            android:scaleType="fitXY"
            android:layout_width="match_parent"
            android:layout_height="165dp" />


        <TextView
            android:textColor="@color/colorRed"
            android:text="我要申请成为大师！"
            android:textSize="@dimen/sp_14"
            android:layout_margin="@dimen/dp_30"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_marginLeft="@dimen/dp_30"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="形象照"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginLeft="20dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/img_positive"
                        android:src="@mipmap/img_qitazizhi"
                        android:layout_width="@dimen/dp_100"
                        android:layout_height="@dimen/dp_100" />

                </LinearLayout>

                <TextView
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="@dimen/dp_10"
                    android:textSize="12sp"
                    android:text="图片须清晰、完整、方向正确"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>

        </LinearLayout>

        <EditText
            android:id="@+id/edt_jianjie"
            android:layout_margin="@dimen/dp_30"
            android:hint="个人简介"
            android:gravity="top"
            android:padding="@dimen/dp_6"
            android:textSize="@dimen/sp_12"
            android:background="@drawable/kaquan_kuang"
            android:layout_width="match_parent"
            android:layout_height="100dp" />

    </LinearLayout>

    <TextView
        android:id="@+id/bt_chashi_tijiao"
        android:layout_marginTop="@dimen/dp_15"
        android:text="提交"
        android:layout_alignParentBottom="true"
        android:textSize="17sp"
        android:gravity="center"
        android:textColor="@color/colorWhite"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp" />

</RelativeLayout>