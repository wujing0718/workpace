<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.WeiRenZhengActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="我的店铺"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:layout_marginTop="@dimen/dp_50"
        android:src="@mipmap/img_zhanweitu2"
        android:layout_width="@dimen/dp_100"
        android:layout_gravity="center_horizontal"
        android:layout_height="@dimen/dp_100" />

    <TextView
        android:textColor="@color/colorBlack"
        android:layout_gravity="center_horizontal"
        android:text="快去进行实名认证即可拥有店铺~"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/bt_renzheng"
        android:text="立即认证"
        android:layout_marginTop="@dimen/dp_30"
        android:layout_marginHorizontal="@dimen/dp_100"
        android:textColor="@color/color_white"
        android:gravity="center"
        android:background="@drawable/delete_kuang"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_40" />

</LinearLayout>