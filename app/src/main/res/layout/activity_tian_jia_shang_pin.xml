<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.TianJiaShangPinActivity">

    <RelativeLayout
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="@dimen/dp_18"
                android:layout_height="@dimen/dp_18" />

        </RelativeLayout>

        <TextView
            android:text="添加商品"
            android:textColor="@color/colorWhite"
            android:textSize="17sp"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <RelativeLayout
            android:id="@+id/bt_tijiao"
            android:layout_alignParentRight="true"
            android:layout_width="@dimen/dp_50"
            android:layout_height="@dimen/dp_44">

            <TextView
                android:text="提交"
                android:textSize="16sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </RelativeLayout>

    </RelativeLayout>
    
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="标题"
                        android:textColor="@color/colorBlack"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_shop_title"
                        android:paddingRight="@dimen/dp_14"
                        android:background="@null"
                        android:hint="请填写标题"
                        android:textSize="14sp"
                        android:maxLength="10"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_50" />

                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>


                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_shop_guige"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="规格"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_shuo_guige"
                            android:text="请选择规格"
                            android:textColor="@color/colorHui"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_xiayibu"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_13" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="库存"
                        android:textColor="@color/colorBlack"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_shop_num"
                        android:background="@null"
                        android:hint="请输入个数"
                        android:textSize="14sp"
                        android:maxLength="5"
                        android:paddingRight="@dimen/dp_14"
                        android:numeric="integer"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_50" />

                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:text="佣金"
                        android:textColor="@color/colorBlack"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_shop_yongjin"
                        android:background="@null"
                        android:hint="请输入金额"
                        android:numeric="integer"
                        android:paddingRight="@dimen/dp_14"
                        android:textSize="14sp"
                        android:maxLength="5"
                        android:gravity="right|center_vertical"
                        android:layout_centerVertical="true"
                        android:layout_alignParentRight="true"
                        android:layout_width="@dimen/dp_200"
                        android:layout_height="@dimen/dp_50" />

                </RelativeLayout>

            </LinearLayout>

            <View
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_10"/>

            <LinearLayout
                android:layout_marginHorizontal="@dimen/dp_15"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                
                <RelativeLayout
                    android:id="@+id/bt_shop_fenlei"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="商品分类"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_categoryName"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_xiayibu"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_13" />

                    </LinearLayout>

                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_shop_canshu"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="商品参数"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_yitianxie"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_xiayibu"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_13" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_fahuo_city"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="发货地区"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_city"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_xiayibu"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_13" />

                    </LinearLayout>


                </RelativeLayout>

                <View
                    android:background="#E8E8E8"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <RelativeLayout
                    android:id="@+id/bt_shop_detail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <TextView
                        android:layout_centerVertical="true"
                        android:text="商品详情"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_shop_yitianxie"
                            android:layout_gravity="center_vertical"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_xiayibu"
                            android:layout_marginLeft="@dimen/dp_6"
                            android:layout_gravity="center_vertical"
                            android:layout_width="@dimen/dp_8"
                            android:layout_height="@dimen/dp_13" />

                    </LinearLayout>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <LinearLayout
                        android:layout_gravity="center_vertical"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="添加主图"
                            android:textColor="@color/colorBlack"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <TextView
                            android:id="@+id/tv_zhutu_num"
                            android:text="(0/6)"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>

                </LinearLayout>

                <com.huohougongfu.app.Utils.CustomGridView
                    android:id="@+id/gridView"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_120"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginTop="10dp"
                    android:columnWidth="60dp"
                    android:horizontalSpacing="10dp"
                    android:numColumns="3"
                    android:scrollbars="none"
                    android:verticalSpacing="10dp" />

            </LinearLayout>

