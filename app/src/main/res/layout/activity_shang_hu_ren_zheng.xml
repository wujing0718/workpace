<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.ShangHuRenZhengActivity">

    <RelativeLayout
        android:id="@+id/view_renzheng_tab"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="认证"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:src="@mipmap/img_shenfenrenzheng"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="165dp" />

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="身份证照"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_positive"
                            android:src="@mipmap/positive"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100" />

                        <ImageView
                            android:id="@+id/img_reverse"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:src="@mipmap/reverse"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="12sp"
                        android:text="保证身份证图片完整、文字清晰可辨认"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginTop="@dimen/dp_20"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="10dp"/>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginLeft="@dimen/dp_30"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_50">

                <TextView
                    android:text="店铺名"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <EditText
                    android:id="@+id/edt_dianpu_name"
                    android:layout_marginRight="55dp"
                    android:hint="请输入店铺名"
                    android:textSize="14sp"
                    android:maxLength="10"
                    android:paddingHorizontal="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:background="@drawable/kaquan_kuang"
                    android:layout_gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/dp_30"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="资质证明"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_marginLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_yingyezhizhao"
                            android:src="@mipmap/img_yingyezizhi"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                        <ImageView
                            android:id="@+id/img_mentou_photo"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:src="@mipmap/img_qitazizhi"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_shouquan_photo"
                            android:src="@mipmap/img_yingyezizhi"
                            android:layout_width="100dp"
                            android:layout_height="100dp" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginTop="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_20"
                        android:textSize="12sp"
                        android:layout_marginRight="50dp"
                        android:text="图片须清晰、完整、方向正确"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

            <View
                android:layout_marginVertical="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_30"
                android:background="#E8E8E8"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="开  户  名"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_kaihu_name"
                        android:layout_marginRight="55dp"
                        android:hint="请输入银行开户名"
                        android:textSize="14sp"
                        android:maxLength="20"
                        android:textColorHint="#818181"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/kaquan_kuang"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="银行卡号"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <EditText
                        android:id="@+id/edt_kaihu_kahao"
                        android:layout_marginRight="55dp"
                        android:hint="请输入银行卡号"
                        android:textSize="14sp"
                        android:textColorHint="#818181"
                        android:paddingHorizontal="@dimen/dp_10"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:background="@drawable/kaquan_kuang"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_10"
                    android:layout_marginLeft="@dimen/dp_30"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/dp_50">

                    <TextView
                        android:text="开户银行"
                        android:layout_gravity="center_vertical"
                        android:textColor="@color/colorBlack"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <RelativeLayout
                        android:id="@+id/bt_kaihu_yinhang"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/dp_30"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/dp_30"
                        android:layout_marginRight="55dp"
                        android:background="@drawable/kaquan_kuang"
                        android:paddingHorizontal="@dimen/dp_10">

                        <TextView
                            android:id="@+id/tv_kaihu_yinhang"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerVertical="true"
                            android:text="请选择开户银行"
                            android:textColor="#818181"
                            android:textSize="14sp" />

                    </RelativeLayout>


                </LinearLayout>

                <TextView
                    android:layout_marginLeft="@dimen/dp_115"
                    android:text="此银行卡为提现银行卡"
                    android:textSize="12sp"
                    android:textColor="#818181"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

            <TextView
                android:id="@+id/bt_shanghu_tijiao"
                android:layout_marginTop="@dimen/dp_30"
                android:text="提交"
                android:textSize="17sp"
                android:gravity="center"
                android:textColor="@color/colorWhite"
                android:background="@color/colorBlack"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

    </android.support.v4.widget.NestedScrollView>

</LinearLayout>