<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.SpecialBrandActivity">

    <RelativeLayout
        android:id="@+id/view_renzheng_tab"
        android:background="@color/colorBlack"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_44">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="50dp"
            android:layout_height="@dimen/dp_44">

            <ImageView
                android:layout_centerInParent="true"
                android:src="@mipmap/img_back_white"
                android:layout_width="18dp"
                android:layout_height="18dp" />

        </RelativeLayout>

        <TextView
            android:layout_centerInParent="true"
            android:text="认证"
            android:textSize="17sp"
            android:textColor="@color/colorWhite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <ImageView
        android:src="@mipmap/img_shenfenrenzheng"
        android:scaleType="fitXY"
        android:layout_width="match_parent"
        android:layout_height="165dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_marginTop="@dimen/dp_30"
            android:layout_marginLeft="@dimen/dp_30"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="我有个人品牌，我要申请成为特约品牌！"
                android:textColor="#E51C23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_marginTop="@dimen/dp_10"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:text="商标证明"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_marginLeft="20dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/img_shangbiao"
                            android:src="@mipmap/img_yingyezizhi"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100" />

                        <ImageView
                            android:id="@+id/img_qita_zizhi"
                            android:layout_marginLeft="@dimen/dp_30"
                            android:src="@mipmap/img_yingyezizhi"
                            android:layout_width="@dimen/dp_100"
                            android:layout_height="@dimen/dp_100" />

                    </LinearLayout>

                    <TextView
                        android:layout_marginRight="50dp"
                        android:layout_marginTop="@dimen/dp_10"
                        android:textSize="12sp"
                        android:text="图片须清晰、完整、方向正确"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/bt_special_tijiao"
            android:layout_marginTop="@dimen/dp_30"
            android:text="提交"
            android:textSize="17sp"
            android:gravity="center"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorWhite"
            android:background="@color/colorBlack"
            android:layout_width="match_parent"
            android:layout_height="44dp" />

    </RelativeLayout>


</LinearLayout>