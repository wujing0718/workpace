<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/colorBlack"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WoDe.Activity.YaoQingActivity">

    <ImageView
        android:id="@+id/img_zhuanke_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_230"
        android:scaleType="centerCrop" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_above="@+id/bt_lijiyaoqing"
            android:id="@+id/view_list"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_230">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="44dp">

                    <RelativeLayout
                        android:id="@+id/bt_finish"
                        android:layout_width="50dp"
                        android:layout_height="44dp">

                        <ImageView
                            android:layout_centerInParent="true"
                            android:src="@mipmap/img_back_white"
                            android:layout_width="18dp"
                            android:layout_height="18dp" />

                    </RelativeLayout>

                    <TextView
                        android:text="邀请"
                        android:textSize="17sp"
                        android:textColor="@color/colorWhite"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

                <LinearLayout
                    android:layout_marginTop="@dimen/dp_30"
                    android:layout_marginRight="@dimen/dp_40"
                    android:layout_gravity="right"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_biaoyu"
                        android:text="标语口号"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/tv_guize"
                        android:layout_gravity="center_horizontal"
                        android:text="规则详情"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/dp_4"
                        android:textColor="@color/colorWhite"
                        android:layout_width="@dimen/dp_120"
                        android:layout_height="wrap_content" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="@dimen/dp_15"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:orientation="horizontal"
                android:background="@drawable/kaquan_kuang"
                android:layout_width="match_parent"
                android:layout_height="40dp">

                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="用户名"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="当前等级"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />
                <TextView
                    android:layout_weight="1"
                    android:gravity="center"
                    android:text="领取奖励"
                    android:textStyle="bold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <RelativeLayout
                android:layout_marginTop="@dimen/dp_15"
                android:background="@drawable/kaquan_kuang"
                android:layout_marginHorizontal="@dimen/dp_15"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <com.scwang.smartrefresh.layout.SmartRefreshLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true">

                    <android.support.v7.widget.RecyclerView
                        android:id="@+id/rec_yaoqing"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/dp_15">

                    </android.support.v7.widget.RecyclerView>


                </com.scwang.smartrefresh.layout.SmartRefreshLayout>


            </RelativeLayout>


            <include
                android:visibility="gone"
                layout="@layout/include_zhanweitu"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>


        </LinearLayout>

        <TextView
            android:id="@+id/bt_lijiyaoqing"
            android:layout_alignParentBottom="true"
            android:text="立即邀请"
            android:gravity="center"
            android:textColor="@color/white"
            android:background="#CCBA91"
            android:layout_width="match_parent"
            android:layout_height="40dp" />


    </RelativeLayout>





</FrameLayout>