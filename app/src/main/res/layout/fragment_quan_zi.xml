<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/colorWhite"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".Fragment.QuanZiFragment">

    <View
        android:id="@+id/statusBarView"
        android:background="#33000000"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </View>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="44dp">

        <RelativeLayout
            android:id="@+id/bt_finish"
            android:layout_width="44dp"
            android:layout_height="44dp">

            <ImageView
                android:src="@mipmap/img_back"
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </RelativeLayout>

        <EditText
            android:id="@+id/bt_shop_sousuo"
            android:hint="Search"
            android:layout_weight="1"
            android:textSize="12sp"
            android:paddingHorizontal="@dimen/dp_10"
            android:background="@drawable/sousuo_kuang"
            android:drawableLeft="@mipmap/img_back"
            android:layout_gravity="center_vertical"
            android:layout_width="0dp"
            android:layout_height="28dp">

        </EditText>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_weight="1"
                android:layout_width="44dp"
                android:layout_height="44dp">

                <ImageView
                    android:layout_centerInParent="true"
                    android:src="@mipmap/img_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </RelativeLayout>


        </LinearLayout>

    </LinearLayout>
    
    <LinearLayout
        android:layout_marginVertical="20dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_width="44dp"
                android:layout_height="44dp" />
            
            <TextView
                android:text="找人"
                android:textSize="12sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_quanzi_wenzhang"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_width="44dp"
                android:layout_height="44dp" />

            <TextView
                android:text="文章"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/bt_jingxuan"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@mipmap/ic_launcher"
                android:layout_gravity="center_horizontal"
                android:layout_width="44dp"
                android:layout_height="44dp" />

            <TextView
                android:text="精选"
                android:textSize="12sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/colorBlack"
                android:layout_gravity="center_horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="@color/colorWhite"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.flyco.tablayout.SlidingTabLayout
            android:id="@+id/stl"
            android:background="@drawable/quanzi_banyuan"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="6dp"
            android:layout_height="42dp"
            app:tl_divider_color="#1A000000"
            app:tl_indicator_color="#BBBBBB"
            app:tl_indicator_corner_radius="3dp"
            app:tl_indicator_style="NORMAL"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            app:tl_textSelectColor="@color/colorBlack"
            app:tl_textUnselectColor="@color/colorHui"
            app:tl_textsize="17sp" />

        <android.support.v4.view.ViewPager
            android:layout_marginTop="10dp"
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>

</LinearLayout>