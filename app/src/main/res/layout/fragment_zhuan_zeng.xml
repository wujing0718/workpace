<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ShouYe.Fragment.ZhuanZengFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:layout_marginLeft="50dp"
                android:text="茶米（剩余：60粒）"
                android:textSize="16sp"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_marginLeft="50dp"
                    android:hint="请输入数量"
                    android:textSize="14sp"
                    android:textColor="#BBBBBB"
                    android:paddingLeft="@dimen/dp_10"
                    android:background="@drawable/kaquan_kuang"
                    android:layout_width="220dp"
                    android:layout_height="30dp" />

                <TextView
                    android:gravity="center_vertical"
                    android:layout_marginLeft="50dp"
                    android:text="只能送出总数的50%哦~"
                    android:textSize="10sp"
                    android:textColor="#E51C23"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <RadioGroup
                    android:layout_marginLeft="50dp"
                    android:layout_marginTop="6dp"
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="250"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/xiadan_kuang"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_marginHorizontal="10dp"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="666"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/xiadan_kuang"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />

                    <RadioButton
                        android:layout_weight="1"
                        android:layout_gravity="center_vertical"
                        android:button="@null"
                        android:text="1314"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:textSize="14sp"
                        android:textColor="@color/colorBlack"
                        android:background="@drawable/xiadan_kuang"
                        android:layout_width="match_parent"
                        android:layout_height="20dp" />


                </RadioGroup>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_marginLeft="50dp"
                android:text="我的悄悄话..."
                android:textColor="#1890FF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <android.support.v7.widget.CardView
                android:layout_marginTop="@dimen/dp_10"
                android:layout_marginBottom="20dp"
                android:layout_marginHorizontal="50dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                android:layout_width="match_parent"
                android:layout_height="90dp">

                <RelativeLayout
                    android:orientation="horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:maxLines="4"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginVertical="@dimen/dp_10"
                        android:text="送你我的茶米，分享我的快乐~
送你我的茶米，分享我的快乐~送你我的茶米，分享我的快乐~送你我的茶米，分享我的快乐~送你我的茶米，分享我的快乐~"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_marginTop="10dp"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:text="换一换"
                            android:textSize="10sp"
                            android:textColor="#DBDBDB"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                        <ImageView
                            android:src="@mipmap/img_back"
                            android:layout_gravity="center_vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" />

                    </LinearLayout>


                </RelativeLayout>

            </android.support.v7.widget.CardView>

            <TextView
                android:layout_marginLeft="50dp"
                android:text="收下我的茶米，你就是我的人啦~"
                android:textColor="@color/colorHui"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="茶米代表我的心~"
                android:textColor="@color/colorHui"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_marginLeft="50dp"
                android:text="猜猜送你几个茶米~"
                android:textColor="@color/colorHui"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

        <RelativeLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="转增给他"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/colorBlack"
                android:background="@drawable/kaquan_kuang"
                android:layout_width="200dp"
                android:layout_height="30dp" />


            <LinearLayout
                android:layout_alignParentBottom="true"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <View
                    android:background="#BBBBBB"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />

                    <ImageView
                        android:layout_weight="1"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content" />


                </LinearLayout>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>


</FrameLayout>