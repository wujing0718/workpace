<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.LoginActivity">
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:background="#F7F7F7"
            android:layout_width="match_parent"
            android:layout_height="44dp">

            <RelativeLayout
                android:id="@+id/bt_register"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="60dp"
                android:layout_height="44dp">

                <TextView
                    android:text="注册"
                    android:textSize="17sp"
                    android:layout_centerInParent="true"
                    android:textColor="@color/colorBlack"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </RelativeLayout>


        </RelativeLayout>

        <LinearLayout
            android:layout_centerInParent="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_marginHorizontal="38dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_gravity="center_vertical"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="16dp"
                        android:layout_height="16dp" />

                    <EditText
                        android:id="@+id/edt_login_phone"
                        android:hint="请输入手机号"
                        android:textSize="14sp"
                        android:phoneNumber="true"
                        android:background="@null"
                        android:paddingLeft="10dp"
                        android:layout_gravity="center_vertical"
                        android:layout_width="match_parent"
                        android:layout_height="30dp" />

                </LinearLayout>

                <View
                    android:layout_marginTop="4dp"
                    android:background="@color/colorXian"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/yanzhengmadenglu"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <EditText
                            android:id="@+id/edt_login_code"
                            android:hint="请输入验证码"
                            android:textSize="14sp"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="180dp"
                            android:layout_height="30dp" />

                        <View
                            android:background="@color/colorXian"
                            android:layout_gravity="center_vertical"
                            android:layout_width="1dp"
                            android:layout_height="25dp"/>

                        <RelativeLayout
                            android:id="@+id/bt_login_code"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp">

                            <TextView
                                android:id="@+id/tv_login_code"
                                android:text="获取验证码"
                                android:textSize="14sp"
                                android:textColor="@color/colorBlack"
                                android:layout_centerInParent="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />

                        </RelativeLayout>

                    </LinearLayout>

                    <View
                        android:layout_marginTop="4dp"
                        android:background="@color/colorXian"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bt_zhaohuimima"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="11sp"
                        android:text="找回密码"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/bt_mimadenglu"
                        android:layout_alignParentRight="true"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="11sp"
                        android:text="密码登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/mimadenglu"
                android:visibility="gone"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_marginTop="30dp"
                    android:orientation="vertical"
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:layout_gravity="center_vertical"
                            android:src="@mipmap/ic_launcher"
                            android:layout_width="16dp"
                            android:layout_height="16dp" />

                        <EditText
                            android:id="@+id/edt_login_password"
                            android:hint="请输入密码"
                            android:textSize="14sp"
                            android:background="@null"
                            android:paddingLeft="10dp"
                            android:layout_gravity="center_vertical"
                            android:layout_width="match_parent"
                            android:layout_height="30dp" />

                    </LinearLayout>

                    <View
                        android:layout_marginTop="4dp"
                        android:background="@color/colorXian"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"/>

                </LinearLayout>

                <RelativeLayout
                    android:layout_marginHorizontal="38dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/bt_yanzhengmadenglu"
                        android:layout_alignParentRight="true"
                        android:padding="6dp"
                        android:textColor="@color/colorBlack"
                        android:textSize="11sp"
                        android:text="验证码登录"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </RelativeLayout>


            </LinearLayout>

            <TextView
                android:id="@+id/bt_login"
                android:layout_marginTop="60dp"
                android:background="@drawable/login_kuang"
                android:layout_marginHorizontal="38dp"
                android:text="登录"
                android:textSize="17sp"
                android:textColor="@color/colorBlack"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="44dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                
                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorXian"
                    android:layout_width="50dp"
                    android:layout_height="1dp"/>

                <TextView
                    android:text="其他方式登录"
                    android:textSize="12sp"
                    android:layout_marginHorizontal="10dp"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <View
                    android:layout_gravity="center_vertical"
                    android:background="@color/colorXian"
                    android:layout_width="50dp"
                    android:layout_height="1dp"/>
                
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="12dp"
                android:layout_marginBottom="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/bt_wexin"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="36dp"
                        android:layout_height="36dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="36dp"
                        android:layout_height="36dp" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_centerInParent="true"
                        android:src="@mipmap/ic_launcher"
                        android:layout_width="36dp"
                        android:layout_height="36dp" />

                </RelativeLayout>

            </LinearLayout>

        </LinearLayout>

    </RelativeLayout>

</android.support.constraint.ConstraintLayout>