<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_marginTop="15dp"
    android:background="@drawable/login_kuang"
    android:layout_marginHorizontal="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_margin="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:text="取货码："
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_chatai_verificationCode"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorBlack"
                android:text=""
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <TextView
            android:id="@+id/tv_chatai_orderStatus"
            android:text=""
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_gravity="right"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

    </RelativeLayout>

    <View
        android:background="@color/colorHui"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_marginHorizontal="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chatai_teas"
            android:text="绿茶、红茶等"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/colorBlack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:layout_alignParentRight="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_chatai_teaNum"
                android:text="共2件"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_chatai_orderTotal"
                android:text="合计：¥30"
                android:layout_marginLeft="@dimen/dp_10"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorBlack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="18dp"
        android:layout_marginBottom="12dp"
        android:layout_marginHorizontal="13dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_chatai_createTime"
            android:textSize="12sp"
            android:layout_centerVertical="true"
            android:textColor="@color/colorHui"
            android:text="下单时间：2019-5-29  15:18"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        
        <Button
            android:id="@+id/btn_queidng"
            android:layout_alignParentRight="true"
            android:text="确认支付"
            android:visibility="gone"
            android:background="@drawable/login_kuang"
            android:layout_width="80dp"
            android:layout_height="30dp" />

    </RelativeLayout>

    <TextView
        android:visibility="gone"
        android:layout_marginBottom="12dp"
        android:layout_gravity="center_horizontal"
        android:text="支付倒计时 05:00"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />


</LinearLayout>